{
	"compilerOptions": {
		"target": "es2023",
		"module": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"rootDir": "./",
		"paths": {
			"@util/*": ["./util/*"],
			"@lib": ["./lib/index.ts"]
		},

		// It is important that no code from ./lib is directly imported from any other
		// place: it has to be imported as an external dependency. That's because the
		// library relies on global state and `instanceof` checks to work properly.
		"typeRoots": [".neja-build/node/lib/node_modules/@types", ".neja-build/neja/out/types"],
		"types": ["node"],

		// Only allow emitting when invoked specifically from command line. We'd like to also always
		// require an outDir, but that's not possible, so we set an eye-catching poison value.
		"outDir": "REQUIRE_EXPLICIT_OUTDIR_ON_COMMAND_LINE",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"allowImportingTsExtensions": true
	},
	"exclude": ["build", "node_modules", ".neja-build"]
}
